APP_NAME=DriveAssist
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost:8000

APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_GH

APP_MAINTENANCE_DRIVER=file

BCRYPT_ROUNDS=12

LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# Database Configuration
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=drive_assist
DB_USERNAME=root
DB_PASSWORD=

SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

BROADCAST_CONNECTION=log
FILESYSTEM_DISK=local
MEDIA_DISK_DRIVER=local
QUEUE_CONNECTION=database

CACHE_STORE=database

# Sanctum Configuration
SANCTUM_STATEFUL_DOMAINS=localhost,localhost:3000,localhost:8081,127.0.0.1,127.0.0.1:8000,::1

# Mail Configuration (using log for development)
MAIL_MAILER=log
MAIL_LOG_CHANNEL=mail
MAIL_SCHEME=null
MAIL_HOST=127.0.0.1
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_FROM_ADDRESS="noreply@driveassist.com"
MAIL_FROM_NAME="${APP_NAME}"

# AWS S3 Configuration (for production file storage)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=driveassist-files
AWS_URL=
AWS_ENDPOINT=
AWS_USE_PATH_STYLE_ENDPOINT=false

# AI Configuration
AI_DEFAULT_PROVIDER=groq
GROQ_API_KEY=
GROQ_API_URL=https://api.groq.com/openai/v1/chat/completions
GROQ_MODEL=llama-3.3-70b-versatile

# OpenAI Configuration (alternative)
OPENAI_API_KEY=
OPENAI_API_URL=https://api.openai.com/v1/chat/completions
OPENAI_MODEL=gpt-4o-mini

# Anthropic Configuration (alternative)
ANTHROPIC_API_KEY=
ANTHROPIC_API_URL=https://api.anthropic.com/v1/messages
ANTHROPIC_MODEL=claude-3-5-sonnet-20241022

# Business Model Configuration
FREE_LEADS_FOR_EXPERTS=4
FREE_DIAGNOSES_FOR_GUESTS=3
FREE_DIAGNOSES_FOR_DRIVERS=5

# OTP Configuration
OTP_EXPIRY_MINUTES=10

# Frontend URL (for emails)
FRONTEND_URL=http://localhost:8081

VITE_APP_NAME="${APP_NAME}"
